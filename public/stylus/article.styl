.article-page
  padding:15px 20px 15px
  .article-header
    .article-title
      font-size:20px
      margin-top:10px
      font-weight:600
      margin-bottom:10px
    .article-status
      font-size 12px
      padding-bottom:10px
      margin: 0
      border-bottom:1px dashed #8492A6
      color #99A9BF
      span
        margin-right:20px  
  .article-footer
    margin-top:40px
    color: #404040
    .footer-page
      padding:15px 0
      border-top:1px solid #dddddd
      border-bottom: 1px solid #dddddd
      font-size:0
      a
        text-decoration:none
        color:#29B4F0
        font-size:16px
        &.prev
          display:inline-block
          width:50%
          text-overflow: ellipsis
          overflow: hidden
          white-space: nowrap
        &.next
          display:inline-block
          width:50%
          text-align: right
          text-overflow: ellipsis
          overflow: hidden
          white-space: nowrap;
.comment-container
  background-color: #f4f5f5
  padding-top:30px;
  .comment-box
    background-color: #fff;
    border-top: 1px solid #d7d7d7
    padding: 15px
    .bottom-bar
      font-size:14px;
      height:32px;
      margin-top:20px;
      .submit-comment
        float: right;
        height: 32px;
        line-height: 32px
        padding: 0 15px
        border-radius: 4px
        border: 1px solid #20a0ff
        color: #20a0ff
        cursor: pointer
        background-color: #fff;
        outline: none;
        &:hover
          background-color: #20a0ff
          color: #fff
  .no-login
    height:40px;
    background: #fff;
    text-align: center;
    line-height: 40px
    margin-top:20px;
    font-size: 14px;
    a
      color: #20a0ff
      cursor: pointer
      text-decoration: none
      &:hover
        text-decoration: underline
  .comment-list
    background-color: #fff;
    a
      color:#20a0ff;
      text-decoration: none
      &:hover
        color:#20a0ff;
        text-decoration: underline
        background: none;
    .comment-list-item
      display: flex
      overflow: hidden
      padding: 10px 15px 10px 0
      border-bottom: 1px solid #d7d7d7
      &:last-child
        border-bottom: none
      .avatar
        flex: 0 0 60px
        overflow: hidden
        text-align: center
        font-size:0
        img
          width:30px
          height:30px
          border-radius: 4px
          display: inline-block
      .content
        flex: 1
        .content-status
          font-size: 12px
          margin: 0
          line-height: 1
          margin:5px 0 2px
          .username
            font-weight: 600
            margin-right:10px
            color:#666
          .comment-time
            color:#20a0ff
        .content-center
          margin:5px 0
          line-height: 1.5
          p
            margin:0
        .bottom-content
          height:30px
          font-size: 14px
          line-height: 30px
          .reply,.delete
            float:left
            margin-right:20px
            cursor: pointer
            &:hover
              color: #20a0ff
          .like,.show_like
            float: right
            .iconfont
              display: inline-block
              font-size:20px
              margin-right: 10px
              cursor: pointer
              color: #d7d7d7
          .show_like
            .iconfont
              cursor: auto