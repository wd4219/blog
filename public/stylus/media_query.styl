@media screen and (max-width:1180px)
  @media screen  and (min-width:800px)
    .header
      width: 100%
      #canvas
        display:none
      .nav-box
        width: 100%
    .main-container
      width: 100%
      padding: 0 5px
      box-sizing: border-box
      .left-content
        width: 100%
    .right-side
      display: none
    .footer
      .content
        width: 100%
@media screen and (min-width:600px) 
  @media screen and (max-width:799px) 
    .header
      width: 100%
      #canvas
        display:none
      .nav-box
        width: 100%
        .motto
          font-size: 14px
          bottom: 5px
        .logo
          display: inline-block
        .nav-bar
          width: 200px  
          left: 170px
          svg 
            display:none
    .main-container
      width: 100%
      padding: 0 5px
      box-sizing: border-box
      .left-content
        width: 100%
    .right-side
      display: none
    .footer
      .content
        width: 100%
@media screen and (min-width:320px) 
  @media screen and (max-width:599px)
    p
      font-size: 12px 
    .article-list
      padding: 10px !important;
    .header
      width: 100%
      height: 60px
      background: #20a0ff
      border-bottom: 1px solid #fff
      #canvas
        display:none
      .nav-box
        width: 100%
        font-size: 14px
        .motto
          font-size: 12px
          left: 120px
          bottom: 5px
        .logo
          display: inline-block
          height: 60px
          width: 100px
        .nav-bar
          width: 200px  
          left: 100px
          svg 
            display:none
        .right-box
          display: none
        .icon-menu
          display:block
    .main-container
      width: 100%
      padding: 0 5px
      box-sizing: border-box
      .left-content
        width: 100%
    .right-side
      display: none
    .footer
      height: auto
      .content
        padding: 10px
        width: 100%
        .logo-text
          font-size: 20px
          margin-bottom: 5px
        .left
          margin-bottom: 20px
          a
            width: 100px
            height: 60px
        .right
          .contact
            display:flex
            a
              flex: 1
              text-align: center;
        & > div
          width: 100%
    .notification
      width: 70%


