.user-container
  padding: 20px
  font-size:14px
  h3
    margin: 10px 0
  .user-info,.change-password
    margin-left: 15px
    label 
      width: 100px
      display:inline-block
      text-align: right
      margin-right:20px
    div
      margin:20px 0;
    input
      outline: none 
      width: 300px
      height: 28px
      border-radius: 2px
      padding: 0
      border: 1px solid #d7d7d7
      padding: 0 4px
      &:focus
        border 1px solid #20A0FF
    .motto-box
      label 
        line-height: 100px;
        vertical-align: middle
      textarea
        padding: 0
        display: inline-block
        vertical-align: middle 
        resize:none
        width: 300px
        border-radius: 2px
        border: 1px solid #d7d7d7
        height: 100px
        outline: none
        padding: 4px
        &:focus
          border 1px solid #20A0FF
    .submit-setting,.update-password
      display: inline-block
      height: 28px
      padding: 0 20px
      color: #20A0FF
      background-color: #ffffff
      border: 1px solid #20A0FF
      line-height: 28px
      margin-left: 200px
      border-radius: 4px
      cursor:pointer
      transition: all 0.5s
      &:hover
        color: #ffffff
        background-color: #20A0FF