extends layout
block content
  include ../components/header
  .main-container
    .left-content
      .list-container
        h2.title 文章列表
          if tag_content
            .tag 标签：
              span.tag_inner #{tag_content}
        ul.article-list-content
          each item in list
            li.article-list-content-item
              a(href="/article/"+item._id,class="title-text")
                h3.article-list-content-item-title #{item.title}
                .item-info
                  span.pulish-time 
                    i.iconfont.icon-riqi
                    |#{item.pulish_time}
                  span.read-amount
                    i.iconfont.icon-read
                    |#{item.read_amount}
                  span.like-amount
                    i.iconfont.icon-zan
                    |#{item.like_amount}
    .right-side
      .login-box
        .username
          label(for="username") 用户名
          input(type="text", id="username",placeholder="请输入用户名",autocomplete="off")
        .password
          label(for="password") 密码
          input(type="password", id="password",placeholder="请输入密码",autocomplete="off")
        .login-btn 登录
        .lose-password 忘记密码？
        .quick-login
          .line
          .text 快捷登录
          .line
        .quick-login-icon
          span.iconfont.icon-qq
          span.iconfont.icon-github
          span.iconfont.icon-weixin
          span.iconfont.icon-weibo
      .tag-box
        .tagcloud
          a(href="#") css
          a(href="#") Vue
