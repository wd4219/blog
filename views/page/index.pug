extends layout

block content
  include ../components/header
  .main-container
    .left-content
      ul.article-list
        each list_item in article_list
          li
            .article-item
              h2.article-title #{list_item.title}
              p.top-status 
                span.pulish-time 日期：#{list_item.pulish_time}
                span.read-amount 阅读量：#{list_item.read_amount}
                span.like-amount 赞：#{list_item.like_amount}
              .article-abstract
                |!{list_item.description}
              .article-footer
                .label-box
                  i.iconfont.icon-label
                  each item in list_item.tag
                    a(href="/list/tag/"+item._id,class="label-item") #{item.content}
                a(href="/article/"+list_item._id).read-total 阅读全文
            //- .read-all-box
    .right-side
      .login-box
        .username
          label(for="username") 用户名
          input(type="text", id="username",placeholder="请输入用户名",autocomplete="off")
        .password
          label(for="password") 密码
          input(type="password", id="password",placeholder="请输入密码",autocomplete="off")
        .login-btn 登录
        .lose-password 忘记密码？
        .quick-login
          .line
          .text 快捷登录
          .line
        .quick-login-icon
          span.iconfont.icon-qq
          span.iconfont.icon-github
          span.iconfont.icon-weixin
          span.iconfont.icon-weibo
      .tag-box
        .tagcloud
          each tag in tags
            a(href="/list/tag/"+tag._id) #{tag.content}
      .hot-article
        h2.title  热门文章
        ul.hot-article-list
          each item in hot_article_list
            li.hot-article-list.clearfix 
              a(href="/article/"+item._id,class="list-link") #{item.title}
              span.read-amount 
                span.iconfont.icon-read
                |#{item.read_amount}
  .tool-bar
    span.iconfont.icon-top
  script(src="http://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js")
  script(src="./scripts/tagcloud.js")
  script(src="./scripts/index.js")